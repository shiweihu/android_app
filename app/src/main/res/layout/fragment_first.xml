<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background"
        >

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"

         >


         <RelativeLayout
             android:id="@+id/mental_health_crisis"
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="100dp"
             android:layout_marginRight="10dp"
             android:background="@drawable/rectange_corner_alpha"
             android:radius="2dp">

             <ImageButton
                 android:id="@+id/CALL"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="20dp"
                 android:background="@mipmap/mental_health_crisis" />

             <TextView
                 android:id="@+id/CALL_TITLE"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="20dp"
                 android:layout_toRightOf="@+id/CALL"
                 android:text="@string/CALL_TITLE"
                 android:textColor="@color/colorBlack"
                 android:textSize="20sp"

                 />
         </RelativeLayout>

         <RelativeLayout
                android:id="@+id/carers_resources"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectange_corner_alpha"
                >
                <ImageButton
                    android:id="@+id/MenuBut"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/carers_resources">

                </ImageButton>
                <TextView
                    android:id="@+id/menuBut_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/MenuBut"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/menu_list"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    />
            </RelativeLayout>

         <RelativeLayout
             android:id="@+id/carers_tips"
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:background="@drawable/rectange_corner_alpha"
             >
             <ImageButton
                 android:id="@+id/Tips"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="20dp"
                 android:background="@mipmap/tips">

             </ImageButton>
             <TextView
                 android:id="@+id/tips_title"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/Tips"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="20dp"
                 android:text="@string/tips"
                 android:textColor="@color/colorBlack"
                 android:textSize="20sp"
                 />
         </RelativeLayout>

         <RelativeLayout
             android:id="@+id/contact_us"
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:background="@drawable/rectange_corner_alpha"
             >
             <ImageButton
                 android:id="@+id/contact"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="20dp"
                 android:background="@mipmap/contact_us">

             </ImageButton>
             <TextView
                 android:id="@+id/contact_title"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/contact"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="20dp"
                 android:text="@string/contact_us"
                 android:textColor="@color/colorBlack"
                 android:textSize="20sp"

                 />
         </RelativeLayout>


     </LinearLayout>

    </ScrollView>
</RelativeLayout>





